	getData : function(args){
		var param = jQuery.extend({
			url : '',
			data : {},
			dataType : 'jsonp',
			callBack : function(){}
		}, args || {});

		if(param.jsonpCallback){
			jQuery.ajax({
				url : url,
				data : data,
				dataType : 'jsonp',
				jsonpCallback : param.jsonpCallback,
				success : function(d){
					callBack.call(d);
				}
			});
		}else{
			jQuery.ajax({
				url : url,
				data : data,
				dataType : 'jsonp',
				success : function(d){
					callBack.call(d);
				}
			});
		}
	}
